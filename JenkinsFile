pipeline {
    agent any

    environment {
        DEPLOY_DIR = "/home/ubuntu/pipedbackend"
        SERVICE_NAME = "flaskapp"
        REPO_URL = "https://github.com/DedSec2050/pipedbackend.git"
        BRANCH = "master"
    }

    stages {
        stage('Stop Service') {
            steps {
                echo "ðŸ›‘ Stopping $SERVICE_NAME..."
                sh "sudo systemctl stop ${SERVICE_NAME} || true"
            }
        }

        stage('Checkout Code') {
            steps {
                echo "ðŸ“¥ Cloning repository..."
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Deploy to Server Directory') {
            steps {
                echo "ðŸ“‚ Deploying to ${DEPLOY_DIR}..."
                sh """
                sudo rm -rf ${DEPLOY_DIR}
                sudo mkdir -p ${DEPLOY_DIR}
                sudo cp -r . ${DEPLOY_DIR}
                sudo chown -R ubuntu:ubuntu ${DEPLOY_DIR}
                """
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "ðŸ“¦ Installing Python dependencies..."
                sh """
                cd ${DEPLOY_DIR}
                python3 -m venv venv
                source venv/bin/activate
                pip install -r requirements.txt
                deactivate
                """
            }
        }

        stage('Start Service') {
            steps {
                echo "ðŸš€ Starting $SERVICE_NAME..."
                sh "sudo systemctl start ${SERVICE_NAME}"
            }
        }
    }
}
