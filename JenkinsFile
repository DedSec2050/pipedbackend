pipeline {
    agent any

    environment {
        DEPLOY_DIR = "/home/ubuntu/pipedbackend"
        SERVICE_NAME = "flaskapp"
        REPO_URL = "https://github.com/DedSec2050/pipedbackend.git"
        BRANCH = "master"
    }

    stages {
        stage('Stop Service') {
            steps {
                echo "üõë Stopping $SERVICE_NAME..."
                sh "sudo systemctl stop ${SERVICE_NAME} || true"
            }
        }

        stage('Checkout Code') {
            steps {
                echo "üì• Cloning repository..."
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Deploy to Server Directory') {
            steps {
                echo "üìÇ Deploying to ${DEPLOY_DIR}..."
                sh """
                mkdir -p build_tmp
                cp -r ./* build_tmp/
                sudo rm -rf ${DEPLOY_DIR}
                sudo mv build_tmp ${DEPLOY_DIR}
                sudo chown -R ubuntu:ubuntu ${DEPLOY_DIR}
                """
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "üì¶ Installing Python dependencies..."
                sh """
                if [ ! -d ${DEPLOY_DIR} ]; then
                    echo "‚ùå Deploy directory not found!"
                    exit 1
                fi
                cd ${DEPLOY_DIR}
                python3 -m venv venv
                source venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                deactivate
                """
            }
        }

        stage('Start Service') {
            steps {
                echo "üöÄ Starting $SERVICE_NAME..."
                sh "sudo systemctl start ${SERVICE_NAME}"
            }
        }
    }
}
